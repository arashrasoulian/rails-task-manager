<div style = "margin:5% 25%;" >
  <h1 style= "margin-bottom:30px" >my Tasks</h1>

  <ul>
    <% @all_tasks.each do |task| %>
    <li style="list-style: none;">
      <div style ="height:60px; width:100%; background-color:rgb(240, 239, 238); margin-top:10px; padding:1.3%;">
        <input type="checkbox" <%= task.completed ? "checked" : nil %> disabled="disabled" class="form-check-input" style="width:30px; height:30px;" />
        <%= link_to task.title, task_path(task), style: "margin-top:10px" %>
      </div>
    </li>
    <% end %>
  </ul>
  <a class ="btn" href="tasks/new" >  + add a new task</a>
</div>
